{
  "player_position": {
    "alpha": false,
    "size": ["100%cm", "100%cm"],
    "bindings": [
      {
        "binding_name": "#player_position_visible",
        "binding_name_override": "#visible",
        "binding_condition": "always",
        "binding_type": "global"
      }
    ],
    "controls": [
      {
        "position_content@hoamcui:position.position_content": {}    
      }
    ]
  },

  "number_of_days_played": {
    "$position_content_background_alpha|default": 0.4,
    "alpha": "$position_content_background_alpha"
  },

  "anim_chat_txt_alpha": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "duration": 1,
    "from": 1,
    "to": 0
  },

  "anim_chat_txt_wait": {
    "anim_type": "wait",
    "duration": "$chat_item_lifetime",
    "next": "@hud.anim_chat_txt_alpha"
  },

  "anim_chat_bg_alpha": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "destroy_at_end": "chat_grid_item",
    "duration": 1,
    "$chat_background_alpha|default": 0.6,
    "from": "$chat_background_alpha",
    "to": 0
  },

  "anim_chat_bg_wait": {
    "anim_type": "wait",
    "duration": "$chat_item_lifetime",
    "next": "@hud.anim_chat_bg_alpha"
  },

  "chat_grid_item/chat_background": {
    "$chat_background_alpha|default": 0.6,
    "alpha": "$chat_background_alpha"
  },


  "elipses_image": {
    "texture": "textures/ui/inventory_icon",
    "$elipses_image_size|default": [ 19, 13 ],
    "offset": [ 0, -1 ]
  },

  "hotbar_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "utility_tools@hoamcui:utility_tools.utility_tools": {}
          }
        ]
      }
    ]
  },

  "hud_screen": {
    "$use_loading_bars": false,
    "$screen_animations": [],
    "always_accepts_input": true,
    "render_only_when_topmost": false
  }
}
