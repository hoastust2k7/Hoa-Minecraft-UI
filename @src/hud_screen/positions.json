{
  "namespace": "hoamcui:positions",

  "position_label@elm.label": {
    "layer": 1,
    "enable_profanity_filter": false,
    "color": "$chat_text_color",
    "$position_text|default": "Text",
    "text": "$position_text",
    "shadow": true
  },

  "position_image@elm.image": {
    "size": [ "100%c + 6px", "100%c + 2px" ],
    "texture": "textures/ui/Black",
    "$player_position_bg_alpha|default": 0.4,
    "alpha": "$player_position_bg_alpha"
  },

  "position_stack@elm.stack": {
    "orientation": "horizontal",
    "size": [ "100%c", "100%cm" ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle"
  },

  "position_content@elm.stack": {
    "size": [ "100%cm", "100%c" ],
    "$position_image|default": "hoamcui:positions.position_image",
    "$position_label|default": "hoamcui:positions.position_label",
    "$position_stack|default": "hoamcui:positions.position_stack",
    "controls": [
      {
        "player_position@$position_image": {
          "controls": [
            {
              "position@$position_label": {
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "$position_text": "#text",
                "bindings": [
                  {
                    "binding_name": "#player_position_text",
                    "binding_condition": "always",
                    "binding_type": "global"
                  },
                  {
                    "ignored": "(not $position_content_visible)",
                    "binding_type": "view",
                    "source_property_name": "(': ' + #player_position_text - ('%.1s' * #player_position_text + ': ') - ('%.2s' * #player_position_text + ': ') - ('%.3s' * #player_position_text + ': ') - ('%.4s' * #player_position_text + ': ') - ('%.5s' * #player_position_text + ': ') - ('%.6s' * #player_position_text + ': ') - ('%.7s' * #player_position_text + ': ') - ('%.8s' * #player_position_text + ': ') - ('%.9s' * #player_position_text + ': ') - ('%.10s' * #player_position_text + ': ') - ('%.11s' * #player_position_text + ': ') - ('%.12s' * #player_position_text + ': ') - ('%.13s' * #player_position_text + ': ') - ('%.14s' * #player_position_text + ': ') - ('%.15s' * #player_position_text + ': ') - ('%.16s' * #player_position_text + ': ') - ('%.17s' * #player_position_text + ': ') - ('%.18s' * #player_position_text + ': ') - ('%.19s' * #player_position_text + ': ') - ('%.20s' * #player_position_text + ': ') - ('%.21s' * #player_position_text + ': ') - ('%.22s' * #player_position_text + ': ') - ('%.23s' * #player_position_text + ': ') - ('%.24s' * #player_position_text + ': ') - ('%.25s' * #player_position_text + ': ') - ('%.26s' * #player_position_text + ': ') - ('%.27s' * #player_position_text + ': ') - ('%.28s' * #player_position_text + ': ') - ('%.29s' * #player_position_text + ': ') - ('%.30s' * #player_position_text + ': ') - ('%.31s' * #player_position_text + ': ') - ('%.32s' * #player_position_text + ': '))",
                    "target_property_name": "#position_text"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - ': ')",
                    "target_property_name": "#coor_x"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - (': ' + #coor_x + ', '))",
                    "target_property_name": "#coor_y"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - (': ' + #coor_x + ', ' + #coor_y + ', '))",
                    "target_property_name": "#coor_z"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "#player_position_text",
                    "target_property_name": "#text"
                  }
                ]
              }
            }
          ]
        }
      },
    ]
  }

  "player_position_content": {
    "type": "stack_panel",
    "size": [ "100%cm", "100%c" ],
    "$enable_coor_content|default": false,
    "$player_position_image|default": "uwu_hud_content.player_position_image",
    "$player_position_label|default": "uwu_hud_content.player_position_label",
    "$player_position_stack|default": "uwu_hud_content.player_position_stack",
    "controls": [
      {
        "player_position@$player_position_image": {
          "controls": [
            {
              "player_position_text@$player_position_label": {
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "$position_text": "#text",
                "bindings": [
                  {
                    "binding_name": "#player_position_text",
                    "binding_condition": "always",
                    "binding_type": "global"
                  },
                  {
                    "ignored": "(not $enable_coor_content)",
                    "binding_type": "view",
                    "source_property_name": "(': ' + #player_position_text - ('%.1s' * #player_position_text + ': ') - ('%.2s' * #player_position_text + ': ') - ('%.3s' * #player_position_text + ': ') - ('%.4s' * #player_position_text + ': ') - ('%.5s' * #player_position_text + ': ') - ('%.6s' * #player_position_text + ': ') - ('%.7s' * #player_position_text + ': ') - ('%.8s' * #player_position_text + ': ') - ('%.9s' * #player_position_text + ': ') - ('%.10s' * #player_position_text + ': ') - ('%.11s' * #player_position_text + ': ') - ('%.12s' * #player_position_text + ': ') - ('%.13s' * #player_position_text + ': ') - ('%.14s' * #player_position_text + ': ') - ('%.15s' * #player_position_text + ': ') - ('%.16s' * #player_position_text + ': ') - ('%.17s' * #player_position_text + ': ') - ('%.18s' * #player_position_text + ': ') - ('%.19s' * #player_position_text + ': ') - ('%.20s' * #player_position_text + ': ') - ('%.21s' * #player_position_text + ': ') - ('%.22s' * #player_position_text + ': ') - ('%.23s' * #player_position_text + ': ') - ('%.24s' * #player_position_text + ': ') - ('%.25s' * #player_position_text + ': ') - ('%.26s' * #player_position_text + ': ') - ('%.27s' * #player_position_text + ': ') - ('%.28s' * #player_position_text + ': ') - ('%.29s' * #player_position_text + ': ') - ('%.30s' * #player_position_text + ': ') - ('%.31s' * #player_position_text + ': ') - ('%.32s' * #player_position_text + ': '))",
                    "target_property_name": "#position_text"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - ': ')",
                    "target_property_name": "#coor_x"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - (': ' + #coor_x + ', '))",
                    "target_property_name": "#coor_y"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "(#position_text - (': ' + #coor_x + ', ' + #coor_y + ', '))",
                    "target_property_name": "#coor_z"
                  },
                  {
                    "binding_type": "view",
                    "source_property_name": "#player_position_text",
                    "target_property_name": "#text"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "chunk_position@$player_position_image": {
          "ignored": "(not $enable_coor_content)",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "enable_chunk_position",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ],
          "controls": [
            {
              "chunk_position_stack@$player_position_stack": {
                "controls": [
                  {
                    "player_chunk_text@$player_position_label": {
                      "$position_text": "hudScreen.chunkPositon"
                    }
                  },
                  {
                    "chunk_position_text@$player_position_label": {
                      "$position_text": "#text",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_x",
                          "target_property_name": "#coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_y",
                          "target_property_name": "#coor_y"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_z",
                          "target_property_name": "#coor_z"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_x / 16 - (#coor_x < 0))",
                          "target_property_name": "#chunk_coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_y / 16 - (#coor_y < 0))",
                          "target_property_name": "#chunk_coor_y"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_z / 16 - (#coor_z < 0))",
                          "target_property_name": "#chunk_coor_z"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_x - #chunk_coor_x * 16)",
                          "target_property_name": "#in_chunk_coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_y - #chunk_coor_y * 16)",
                          "target_property_name": "#in_chunk_coor_y"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(#coor_z - #chunk_coor_z * 16)",
                          "target_property_name": "#in_chunk_coor_z"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "('§r' + (#in_chunk_coor_x < 16) * #in_chunk_coor_x + ', ' + (#in_chunk_coor_y < 16) * #in_chunk_coor_y + ', ' + (#in_chunk_coor_z < 16) * #in_chunk_coor_z)",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  },
                  {
                    "chunk_in_chunk_text@$player_position_label": {
                      "$position_text": "hudScreen.chunkInchunk"
                    }
                  },
                  {
                    "chunk_in_chunk_position_text@$player_position_label": {
                      "$position_text": "#text",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "chunk_position_text",
                          "source_property_name": "#chunk_coor_x",
                          "target_property_name": "#chunk_coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "chunk_position_text",
                          "source_property_name": "#chunk_coor_y",
                          "target_property_name": "#chunk_coor_y"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "chunk_position_text",
                          "source_property_name": "#chunk_coor_z",
                          "target_property_name": "#chunk_coor_z" 
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "('§r' + #chunk_coor_x + ', ' + #chunk_coor_y + ', ' + #chunk_coor_z)",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "overworld_position@$player_position_image": {
          "ignored": "(not $enable_coor_content)",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "enable_overworld_position",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ],
          "controls": [
            {
              "overworld_position_stack@$player_position_stack": {
                "controls": [
                  {
                    "overworld_text@$player_position_label": {
                      "$position_text": "hudScreen.overworldPosition"
                    }
                  },
                  {
                    "overworld_position_text@$player_position_label": {
                      "$position_text": "#text",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_x",
                          "target_property_name": "#coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_z",
                          "target_property_name": "#coor_z"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "('§r' + #coor_x * 8 + ', ' + 'y(?), ' + #coor_z * 8)",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "nether_position@$player_position_image": {
          "ignored": "(not $enable_coor_content)",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "enable_nether_position",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ],
          "controls": [
            {
              "nether_position_stack@$player_position_stack": {
                "controls": [
                  {
                    "player_nether_text@$player_position_label": {
                      "$position_text": "hudScreen.netherPosition"
                    }
                  },
                  {
                    "nether_position_text@$player_position_label": {
                      "$position_text": "#text",
                      "bindings": [
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_x",
                          "target_property_name": "#coor_x"
                        },
                        {
                          "binding_type": "view",
                          "source_control_name": "player_position_text",
                          "source_property_name": "#coor_z",
                          "target_property_name": "#coor_z"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "('§r' + #coor_x / 8 + ', ' + 'y(?), ' + #coor_z / 8)",
                          "target_property_name": "#text"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}